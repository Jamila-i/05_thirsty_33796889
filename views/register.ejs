<!DOCTYPE html>
<html>
  <head>
    <title><%= shopName %> - Register</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <!-- the header (navigation bar) for pages -->
    <%- include("partials/header.ejs") %>

    <!-- Page heading -->
    <h1>Register Page</h1>

    <!-- Registration form (POST request to /registered) -->
    <form method="POST" action="/registered">
      <!-- First name input -->
      <label for="first">First Name:</label>
      <input
        id="first"
        type="text"
        name="first"
        placeholder="Enter your first name"
        required
      />

      <!-- last name input -->
      <label for="last">Last Name:</label>
      <input
        id="last"
        type="text"
        name="last"
        placeholder="Enter your last name"
        required
      />

      <!-- Email input -->
      <label for="email">Email:</label>
      <input
        id="email"
        type="email"
        name="email"
        placeholder="you@example.com"
        required
      />

      <!-- Submit button -->
      <input type="submit" value="OK" />
    </form>
  </body>
</html>
